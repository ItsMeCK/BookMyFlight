<p id="notice"><%= notice %></p>

<h1>Passenger Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Passenger</th>
      <th>Booking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passenger_bookings.each do |passenger_booking| %>
      <tr>
        <td><%= passenger_booking.passenger_id %></td>
        <td><%= passenger_booking.booking_id %></td>
        <td><%= link_to 'Show', passenger_booking %></td>
        <td><%= link_to 'Edit', edit_passenger_booking_path(passenger_booking) %></td>
        <td><%= link_to 'Destroy', passenger_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

