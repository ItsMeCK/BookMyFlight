<div class="row">
  <div class="col-md-8 col-md-offset-2" id="search-form">
    <table class="table table-striped table-bordered .table-condensed">
      <thead>
      <tr>
        <th>Flight </th>
        <th>Date</th>
        <th>Time</th>
        <th>Passengers</th>
        <th>Departure</th>
        <th>Destination</th>
        <th>Price</th>
        <th>  </th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= booking.flight.airplane_type %></td>
        <td><%= booking.flight.flight_time.strftime("%d/%m/%Y") %></td>
        <td><%= booking.flight.flight_time.strftime("%H:%m") %></td>
        <td><%= booking.passengers.count %></td>
        <td><%= booking.flight.from_airport.code %></td>
        <td><%= booking.flight.to_airport.code %></td>
        <td><%#= @flight.price %> Rs;</td>
        <td> <%= link_to("View Passenger Details", booking_path(booking)) %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>